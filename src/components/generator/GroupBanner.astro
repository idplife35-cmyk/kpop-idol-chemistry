---
interface Props {
  name: string;
  nameKr?: string;
  fandom?: string;
  description?: string;
  color?: string;
  logo?: string;
}

const { name, nameKr, fandom, description, color, logo } = Astro.props;

// Get initials for fallback (e.g., "BTS", "LE" from "LE SSERAFIM", "RV" from "Red Velvet")
function getInitials(groupName: string): string {
  const words = groupName.replace(/[()]/g, '').split(' ');
  if (words.length === 1) {
    return groupName.slice(0, 3).toUpperCase();
  }
  return words.map(w => w[0]).join('').slice(0, 3).toUpperCase();
}

const initials = getInitials(name);
---

<div class="group-banner" style={color ? `--group-color: ${color}` : ''}>
  <div class="banner-content">
    <div class="banner-logo">
      {logo ? (
        <img 
          src={logo} 
          alt={`${name} logo`} 
          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
        />
        <span class="logo-fallback" style="display: none;">{initials}</span>
      ) : (
        <span class="logo-fallback">{initials}</span>
      )}
    </div>
    <div class="banner-text">
      <h1 class="group-name">
        {name}
        {nameKr && <span class="name-kr">{nameKr}</span>}
      </h1>
      {fandom && (
        <p class="fandom-tag">
          <span class="fandom-icon">ðŸ’œ</span>
          For {fandom}
        </p>
      )}
      {description && (
        <p class="description">{description}</p>
      )}
    </div>
  </div>
</div>

<style>
  .group-banner {
    background: linear-gradient(135deg, var(--group-color, var(--accent)) 0%, var(--accent-2) 100%);
    border-radius: var(--radius-lg);
    padding: 32px;
    margin-bottom: 24px;
    color: white;
    position: relative;
    overflow: hidden;
  }
  
  .group-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0,0,0,0.15) 0%, rgba(0,0,0,0.4) 100%);
    pointer-events: none;
  }
  
  .banner-content {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 24px;
  }
  
  .banner-logo {
    width: 80px;
    height: 80px;
    background: white;
    border-radius: 16px;
    padding: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .banner-logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
  
  .logo-fallback {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--group-color, var(--accent));
    background: linear-gradient(135deg, var(--group-color, var(--accent)) 20%, var(--accent-2) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-transform: uppercase;
    letter-spacing: -1px;
  }
  
  .banner-text {
    flex: 1;
  }
  
  .group-name {
    font-size: 2rem;
    font-weight: 800;
    margin: 0;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  }
  
  .name-kr {
    font-size: 1rem;
    font-weight: 500;
    margin-left: 8px;
    color: rgba(255,255,255,0.95);
    text-shadow: 0 1px 2px rgba(0,0,0,0.3);
  }
  
  .fandom-tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(255,255,255,0.3);
    padding: 6px 14px;
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    font-weight: 600;
    margin: 8px 0;
    color: white;
    text-shadow: 0 1px 2px rgba(0,0,0,0.3);
  }
  
  .fandom-icon {
    font-size: 1rem;
  }
  
  .description {
    font-size: 0.9rem;
    margin: 8px 0 0;
    max-width: 500px;
    color: white;
    text-shadow: 0 1px 3px rgba(0,0,0,0.4);
    line-height: 1.5;
    font-weight: 500;
  }
  
  @media (max-width: 600px) {
    .group-banner {
      padding: 20px;
    }
    
    .banner-content {
      flex-direction: column;
      text-align: center;
    }
    
    .banner-logo {
      width: 60px;
      height: 60px;
    }
    
    .group-name {
      font-size: 1.5rem;
    }
    
    .name-kr {
      display: block;
      margin-left: 0;
      margin-top: 4px;
    }
  }
</style>




