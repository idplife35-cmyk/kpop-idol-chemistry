---
interface Member {
  id: string;
  nameKr: string;
  nameEn: string;
  gender: 'male' | 'female';
  position?: string[];
  image?: string;
}

interface Props {
  members: Member[];
  groupName: string;
  onSelect?: string; // JavaScript function name to call
}

const { members, groupName, onSelect } = Astro.props;
---

<div class="member-grid">
  <h3 class="grid-title">ðŸ‘¥ {groupName} Members</h3>
  <div class="members">
    {members.map((member) => (
      <button 
        class="member-card"
        data-member-id={member.id}
        data-member-kr={member.nameKr}
        data-member-en={member.nameEn}
        data-member-gender={member.gender}
      >
        <div class="member-avatar">
          {member.image ? (
            <img src={member.image} alt={member.nameEn} />
          ) : (
            <span class="avatar-initial">{member.nameEn[0]}</span>
          )}
        </div>
        <div class="member-info">
          <span class="member-name-en">{member.nameEn}</span>
          <span class="member-name-kr">{member.nameKr}</span>
        </div>
      </button>
    ))}
  </div>
</div>

<style>
  .member-grid {
    margin: 24px 0;
  }
  
  .grid-title {
    font-size: 1.1rem;
    margin-bottom: 16px;
    color: var(--text);
  }
  
  .members {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 12px;
  }
  
  .member-card {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: var(--radius-md);
    padding: 12px;
    cursor: pointer;
    transition: all var(--transition-normal);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    text-align: center;
  }
  
  .member-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 46, 139, 0.15);
  }
  
  .member-card.selected {
    border-color: var(--accent);
    background: var(--bg-t1);
  }
  
  .member-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .avatar-initial {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  .member-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  
  .member-name-en {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--text);
  }
  
  .member-name-kr {
    font-size: 0.8rem;
    color: var(--muted);
  }
  
  @media (max-width: 480px) {
    .members {
      grid-template-columns: repeat(3, 1fr);
      gap: 8px;
    }
    
    .member-card {
      padding: 8px;
    }
    
    .member-avatar {
      width: 44px;
      height: 44px;
    }
    
    .avatar-initial {
      font-size: 1.2rem;
    }
    
    .member-name-en {
      font-size: 0.8rem;
    }
    
    .member-name-kr {
      font-size: 0.7rem;
    }
  }
</style>

<script>
  // Member card selection
  const memberCards = document.querySelectorAll('.member-card');
  
  memberCards.forEach(card => {
    card.addEventListener('click', () => {
      // Remove selection from all cards
      memberCards.forEach(c => c.classList.remove('selected'));
      // Add selection to clicked card
      card.classList.add('selected');
      
      // Get member data
      const memberId = card.getAttribute('data-member-id');
      const memberKr = card.getAttribute('data-member-kr');
      const memberEn = card.getAttribute('data-member-en');
      const memberGender = card.getAttribute('data-member-gender');
      
      // Dispatch custom event for React to catch
      window.dispatchEvent(new CustomEvent('memberSelected', {
        detail: { id: memberId, nameKr: memberKr, nameEn: memberEn, gender: memberGender }
      }));
    });
  });
</script>




