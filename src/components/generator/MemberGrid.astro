---
interface Member {
  id: string;
  nameKr: string;
  nameEn: string;
  gender: 'male' | 'female';
  position?: string[];
  image?: string;
}

interface Props {
  members: Member[];
  groupName: string;
  groupSlug: string;
}

const { members, groupName, groupSlug } = Astro.props;
---

<div class="member-grid">
  <h3 class="grid-title">ðŸ‘¥ {groupName} Members</h3>
  <p class="grid-subtitle">Click a member to test your chemistry!</p>
  <div class="members">
    {members.map((member) => (
      <a 
        href={`/${groupSlug}-name-generator/${member.id}/`}
        class="member-card"
      >
        <div class="member-avatar">
          {member.image ? (
            <img src={member.image} alt={member.nameEn} />
          ) : (
            <span class="avatar-initial">{member.nameEn[0]}</span>
          )}
        </div>
        <div class="member-info">
          <span class="member-name-en">{member.nameEn}</span>
          <span class="member-name-kr">{member.nameKr}</span>
        </div>
        <span class="member-arrow">â†’</span>
      </a>
    ))}
  </div>
</div>

<style>
  .member-grid {
    margin: 24px 0;
  }
  
  .grid-title {
    font-size: 1.1rem;
    margin-bottom: 4px;
    color: var(--text);
  }

  .grid-subtitle {
    font-size: 0.85rem;
    color: var(--muted);
    margin-bottom: 16px;
  }
  
  .members {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 12px;
  }
  
  .member-card {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: var(--radius-md);
    padding: 12px;
    cursor: pointer;
    transition: all var(--transition-normal);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    text-align: center;
    text-decoration: none;
    position: relative;
  }
  
  .member-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(255, 46, 139, 0.2);
  }

  .member-card:hover .member-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .member-arrow {
    position: absolute;
    top: 8px;
    right: 8px;
    font-size: 0.8rem;
    color: var(--accent);
    opacity: 0;
    transform: translateX(-4px);
    transition: all 0.2s ease;
  }
  
  .member-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .member-card:hover .member-avatar {
    transform: scale(1.05);
  }
  
  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .avatar-initial {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  .member-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  
  .member-name-en {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--text);
  }
  
  .member-name-kr {
    font-size: 0.8rem;
    color: var(--muted);
  }
  
  @media (max-width: 480px) {
    .members {
      grid-template-columns: repeat(3, 1fr);
      gap: 8px;
    }
    
    .member-card {
      padding: 8px;
    }
    
    .member-avatar {
      width: 44px;
      height: 44px;
    }
    
    .avatar-initial {
      font-size: 1.2rem;
    }
    
    .member-name-en {
      font-size: 0.8rem;
    }
    
    .member-name-kr {
      font-size: 0.7rem;
    }

    .member-arrow {
      display: none;
    }
  }
</style>




