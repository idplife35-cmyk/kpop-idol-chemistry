<style>
  .legal-page {
    padding: 40px 0;
  }

  .legal-page .container {
    max-width: 800px;
  }

  .legal-page h1 {
    text-align: center;
    margin-bottom: 8px;
  }

  .last-updated {
    text-align: center;
    color: var(--muted);
    font-size: 0.9rem;
    margin-bottom: 40px;
  }

  section {
    margin-bottom: 32px;
  }

  section h2 {
    font-size: 1.3rem;
    color: var(--text);
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--border);
  }

  section h3 {
    font-size: 1.1rem;
    color: var(--text);
    margin: 16px 0 8px;
  }

  section p {
    color: var(--muted);
    line-height: 1.7;
    margin-bottom: 12px;
  }

  section ul {
    color: var(--muted);
    line-height: 1.7;
    margin-left: 24px;
    margin-bottom: 12px;
  }

  section li {
    margin-bottom: 8px;
  }

  a {
    color: var(--accent);
  }

  @media (max-width: 480px) {
    section h2 {
      font-size: 1.1rem;
    }
  }
</style>




