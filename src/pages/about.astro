    flex-shrink: 0;
  }

  .feature-item h3 {
    font-size: 1rem;
    margin-bottom: 4px;
  }

  .feature-item p {
    font-size: 0.9rem;
    margin: 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .features-grid li {
    padding: 12px 16px;
    background: var(--chip);
    border-radius: var(--radius-sm);
    font-size: 0.95rem;
    color: var(--text);
  }

  .groups-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 16px;
  }

  .group-tag {
    padding: 6px 12px;
    background: var(--accent);
    color: white;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
