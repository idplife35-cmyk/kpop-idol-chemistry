---
import '@/styles/global.css';
import Header from '@/components/common/Header.astro';
import Footer from '@/components/common/Footer.astro';
import SEOHead from '@/components/common/SEOHead.astro';
import { NotificationContainer } from '@/components/gamification';

interface Props {
  title: string;
  description: string;
  keywords?: string[];
  canonicalUrl?: string;
  ogImage?: string;
  schema?: object;
  noIndex?: boolean;
}

const { 
  title, 
  description, 
  keywords = [], 
  canonicalUrl,
  ogImage = '/assets/social/kpop-name-generator-og.png',
  schema,
  noIndex = false
} = Astro.props;

const siteUrl = 'https://kpopnamegenerator.com';
const fullCanonicalUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).toString();
---

<!DOCTYPE html>
<html lang="en" class="kitsch-light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="theme-color" content="#ff8ad6" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/svg+xml" href="/logo.svg" />
  <link rel="apple-touch-icon" href="/logo.svg" />
  
  <SEOHead 
    title={title}
    description={description}
    keywords={keywords}
    canonicalUrl={fullCanonicalUrl}
    ogImage={ogImage}
    noIndex={noIndex}
  />
  
  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-K3G6XK3SXW"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-K3G6XK3SXW');
  </script>
  
  <!-- AdSense -->
  <meta name="google-adsense-account" content="ca-pub-9514930752765161" />
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9514930752765161" crossorigin="anonymous"></script>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@600;700&family=Rubik:wght@400;600;700;800&family=Cherry+Bomb+One&display=swap" rel="stylesheet" />
  
  <!-- Schema.org JSON-LD -->
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
  
  <title>{title}</title>
</head>
<body>
  <Header />
  
  <main>
    <slot />
  </main>
  
  <Footer />
  
  <!-- Global Notification Container -->
  <NotificationContainer client:load />
  
  <!-- Theme Toggle Script -->
  <script>
    const theme = localStorage.getItem('kpop-theme') || 'light';
    document.documentElement.className = theme === 'dark' ? 'dark' : 'kitsch-light';
  </script>
</body>
</html>

