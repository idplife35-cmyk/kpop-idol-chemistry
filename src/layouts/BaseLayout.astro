---
import '@/styles/global.css';
import Header from '@/components/common/Header.astro';
import Footer from '@/components/common/Footer.astro';
import SEOHead from '@/components/common/SEOHead.astro';
import { NotificationContainer } from '@/components/gamification';

interface Props {
  title: string;
  description: string;
  keywords?: string[];
  canonicalUrl?: string;
  ogImage?: string;
  schema?: object;
  noIndex?: boolean;
}

const { 
  title, 
  description, 
  keywords = [], 
  canonicalUrl,
  ogImage = '/assets/social/kpop-name-generator-og.png',
  schema,
  noIndex = false
} = Astro.props;

const siteUrl = 'https://kpopnamegenerator.com';
const fullCanonicalUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).toString();
---

<!DOCTYPE html>
<html lang="en" class="kitsch-light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="theme-color" content="#ff8ad6" />
  
  <!-- Performance: DNS Prefetch for external domains -->
  <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
  <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
  <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
  <link rel="dns-prefetch" href="https://pagead2.googlesyndication.com" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/svg+xml" href="/logo.svg" />
  <link rel="apple-touch-icon" href="/logo.svg" />
  
  <SEOHead 
    title={title}
    description={description}
    keywords={keywords}
    canonicalUrl={fullCanonicalUrl}
    ogImage={ogImage}
    noIndex={noIndex}
  />
  
  <!-- Fonts - Optimized loading with display=swap -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link 
    href="https://fonts.googleapis.com/css2?family=Fredoka:wght@600;700&family=Rubik:wght@400;600;700;800&family=Cherry+Bomb+One&display=swap" 
    rel="stylesheet"
    media="print"
    onload="this.media='all'"
  />
  <noscript>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@600;700&family=Rubik:wght@400;600;700;800&family=Cherry+Bomb+One&display=swap" rel="stylesheet" />
  </noscript>
  
  <!-- Schema.org JSON-LD -->
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
  
  <title>{title}</title>
  
  <!-- AdSense Account Verification -->
  <meta name="google-adsense-account" content="ca-pub-9514930752765161" />
  
  <!-- Critical CSS for above-the-fold content -->
  <style>
    /* Prevent FOUT (Flash of Unstyled Text) */
    html { visibility: visible; opacity: 1; }
    body { margin: 0; font-family: 'Rubik', system-ui, sans-serif; }
  </style>
</head>
<body>
  <Header />
  
  <main>
    <slot />
  </main>
  
  <Footer />
  
  <!-- Global Notification Container -->
  <NotificationContainer client:load />
  
  <!-- Theme Toggle Script (Critical - runs immediately) -->
  <script is:inline>
    const theme = localStorage.getItem('kpop-theme') || 'light';
    document.documentElement.className = theme === 'dark' ? 'dark' : 'kitsch-light';
  </script>
  
  <!-- Deferred Analytics & Ads (Non-blocking) -->
  <script is:inline>
    // Defer loading of analytics and ads until after page load
    window.addEventListener('load', function() {
      // Google Analytics
      setTimeout(function() {
        var gaScript = document.createElement('script');
        gaScript.async = true;
        gaScript.src = 'https://www.googletagmanager.com/gtag/js?id=G-K3G6XK3SXW';
        document.head.appendChild(gaScript);
        
        gaScript.onload = function() {
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          window.gtag = gtag;
          gtag('js', new Date());
          gtag('config', 'G-K3G6XK3SXW');
        };
      }, 100);
      
      // AdSense (defer by 2 seconds for better CWV)
      setTimeout(function() {
        var adScript = document.createElement('script');
        adScript.async = true;
        adScript.src = 'https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9514930752765161';
        adScript.crossOrigin = 'anonymous';
        document.head.appendChild(adScript);
      }, 2000);
    });
  </script>
  
  <!-- AdSense Account Verification (meta tag stays in head) -->
</body>
</html>

